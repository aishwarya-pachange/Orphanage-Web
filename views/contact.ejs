	<body>
	<!-- Form -->
	<div class="container">
						<section>
							<br>
							<h2>Send Us A Message.</h2>
							<p>We will get back to you within 48 hours. Try to provide as much detail as possible.</p>
							<form>
								<div class="row uniform 50%">
									<div class="6u 12u$(xsmall)" >
										<input type="text" name="name" id="name" value="" placeholder="Name*" />
									</div>
									<div class="6u$ 12u$(xsmall)">
										<input type="email" name="email" id="email" value="" placeholder="Email*" />
									</div>
									<div class="12u$">
										<div class="select-wrapper">
											Any particular organization you are interested in?<br>
											<select name="org" id="organization">
												<option value="">- Organization-</option>
												<option value="CRY">C.R.Y. (Child Rights & You)</option>
												<option value="Save The Children">Save The Children</option>
												<option value="Make A Wish">Make A Wish</option>
												<option value="Smile Foundation">Smile Foundation</option>
												<option value="The Wishing Factory">The Wishing Factory</option>
												<option value="Adopt US Kids">Adopt US Kids</option>
												<option value="A Child's Hope">A Child's Hope</option>

											</select>
										</div>
									</div>
									<div class="12u$">
										<div class="select-wrapper">
											What is your reason for contacting us?<br>
											<select name="topic" id="purpose">
												<option value="">- Purpose</option>
												<option value="Donate">Donate</option>
												<option value="Mentor A Child">Mentor a Child</option>
												<option value="Host An Event">Host an Event</option>
												<option value="Get General Information">Get General Information</option>
												<option value="Other">Other</option>
											</select>
										</div>
									</div>
									<!-- <div class="6u$ 12u$(small)">
										<input type="checkbox" id="human" name="human" checked>
										<label for="human">I am a human and not a robot</label>
									</div> -->
									<div class="12u$">
										<textarea name="message" id="message" placeholder="Enter your message*" rows="5"></textarea>
									</div>
									<script type="text/javascript">
									function sendmessage(){
									var service_id = 'priya_gmail';
									var template_id = 'template_DQ8VGOIe';
									var template_params = {
										name: document.getElementById('name').value,
										// reply_email: 'priyavolga@gmail.com',
										message: document.getElementById('message').value,
										topic: document.getElementById('purpose').value,
										org: document.getElementById('organization').value,
										email: document.getElementById('email').value,
										type: "Inquiry"

									};
									emailjs.send(service_id,template_id,template_params)
									.then(function (response) {
								  	console.log('SUCCESS!', response);
										alert("Message Sent Successfully!");
								  }, function (error) {
 								  	console.log('FAILED...', error);
								  });
								};

									</script>
									<div class="12u$">
										<ul class="actions">
											<input type="hidden" name="_confirmation" value="Sent Successfully!">

											<li><input type="button" value="Send Message" class="special" onclick="sendmessage()"/></li>

										</ul>
									</div>
								</div>
							</div>
							</form>
						</section>
						 <% include partial/footer.ejs %>

	</body>
</html>
