	<body>
	<!-- Form -->
	<div class="container">
						<section>
							<br>
							<h2>Send Us A Message.</h2>
							<p>We will get back to you within 48 hours. Try to provide as much detail as possible.</p>
							<form method="post" action="#">
								<div class="row uniform 50%">
									<div class="6u 12u$(xsmall)" >
										<input type="text" name="name" id="name" value="" placeholder="Name*" />
									</div>
									<div class="6u$ 12u$(xsmall)">
										<input type="email" name="email" id="email" value="" placeholder="Email*" />
									</div>
									<div class="12u$">
										<div class="select-wrapper">
											Any particular organization you are interested in?<br>
											<select name="organization" id="organization">
												<option value="">- Organization-</option>
												<option value="1">C.R.Y. (Child Rights & You)</option>
												<option value="1">Save The Children</option>
												<option value="1">Make A Wish</option>
												<option value="1">Smile Foundation</option>
												<option value="1">The Wishing Factory</option>
												<option value="1">Adopt US Kids</option>
												<option value="1">A Child's Hope</option>

											</select>
										</div>
									</div>
									<div class="12u$">
										<div class="select-wrapper">
											What is your reason for contacting us?<br>
											<select name="purpose" id="purpose">
												<option value="">- Purpose</option>
												<option value="1">Donate</option>
												<option value="1">Mentor a Child</option>
												<option value="1">Host an Event</option>
												<option value="1">Get General Information</option>
												<option value="1">Other</option>
											</select>
										</div>
									</div>
									<div class="6u 12u$(small)">
										<input type="checkbox" id="copy" name="copy">
										<label for="copy">Email me a copy of this message</label>
									</div>
									<!-- <div class="6u$ 12u$(small)">
										<input type="checkbox" id="human" name="human" checked>
										<label for="human">I am a human and not a robot</label>
									</div> -->
									<div class="12u$">
										<textarea name="message" id="message" placeholder="Enter your message*" rows="5"></textarea>
									</div>
									<div class="12u$">
										<ul class="actions">
											<li><input type="submit" value="Send Message" class="special" /></li>

										</ul>
									</div>
								</div>
							</div>
							</form>
						</section>
						 <% include partial/footer.ejs %>

	</body>
</html>
